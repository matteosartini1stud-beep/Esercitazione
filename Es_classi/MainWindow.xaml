<Window x:Class="Es_classi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Es_classi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Foreground="Aqua">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--inserimento brano -->
        <GroupBox Header="Aggiungi Brano" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBox x:Name="TxtTitolo" Text="Titolo"/>
                <TextBox x:Name="TxtAutore" Text="Autore"/>
                <TextBox x:Name="TxtDurata" Text="Durata (minuti)"/>
                <Button x:Name="BtnAggiungi" Content="Aggiungi Brano" Margin="0,5,0,0" Click="BtnAggiungi_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Sezione lista brani e CD -->
        <StackPanel Grid.Row="1">
            <ListBox x:Name="LstBrani" Height="250" DisplayMemberPath="Titolo"/>
            <Button x:Name="BtnMostraCd" Content="Mostra Info CD" Margin="0,10,0,0" Click="BtnMostraCd_Click"/>
            <TextBlock x:Name="TxtOutput" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>


    </Grid>
</Window>
